<html lang="ko">
  <head>
    <!-- 이 라이브러리를 이용해 socket 접속 (ajax로 만든 socket 라이브러리) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.4/socket.io.js"></script>

    <!-- jquery -->
    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"
    ></script>

    <!-- Bootstrap (CSS, JS) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
      crossorigin="anonymous"
    ></script>
    <!-- font -->
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;900&display=swap"
      rel="stylesheet"
    />
    <!-- icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css"
    />

    <title>채팅</title>

    <style>
      :root {
        --color-black: #1d1d1f;
        --color-navy: #303142;
        --color-white: #f8f8ff;
        --color-blue: #7289f4;
        --color-coral: #ff9f88;
        --color-orange: #ffcb68;
        --color-gray1: #cbcbd1;
        --color-gray2: #c1c1c8;
        --color-gray3: #8d8d93;
        --color-gray4: #5c5c61;
        --color-gray5: #434349;
      }

      html {
        height: 100vh;
        font-family: 'Noto Sans KR', sans-serif;
        font-size: 14px;
      }
      body {
        height: 100vh;
        overflow-x: hidden; /* 가로 스크롤 안생기게 */
        box-sizing: border-box;
        color: var(--color-black);
      }
      #container {
        width: 100%;
        height: 100vh;
        /* background: rgb(48, 49, 66);
        background: linear-gradient(
          69deg,
          rgba(48, 49, 66, 1) 0%,
          rgba(38, 38, 47, 1) 60%,
          rgba(29, 29, 31, 1) 100%
        ); */
        padding: 50px 0;
      }
      .one {
      }

      .three {
        border-radius: 8px;
        height: 20%;
        background-color: var(--color-blue);
      }
      .my-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
        padding: 2em;
      }
      .my-profile {
        margin-right: 15px;
      }
      .my-username {
        font-weight: 700;
        font-size: 1.5rem;
        letter-spacing: 0.1rem;
      }

      .four {
        border-radius: 8px;
        height: 80%;
        background-color: var(--color-gray1);
      }
      .user-cnt {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 48px;
        padding: 2em;
      }
      .user-cnt-tit {
        font-size: 18px;
        font-weight: 700;
      }

      .two {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        background-color: var(--color-white);
        border-radius: 8px;
      }
      .chatting-warpper {
      }
      .chatting-tit {
        font-size: 2.6rem;
        font-weight: 600;
        padding: 10px 20px;
      }
      .chatting-window {
      }

      .mychat-item-box {
        display: flex;
        justify-content: end;
        margin: 0 20px 10px 0;
      }
      .mychat-item1 {
        display: flex;
        flex-direction: column;
        justify-content: end;
      }
      .mychat-item1-time {
        margin: 0 5px;
        color: var(--color-navy);
        font-size: 12px;
      }
      .mychat-item2 {
      }
      .mychat-item2-who {
        text-align: end;
        color: var(--color-navy);
        font-weight: 500;
      }
      .mychat-item2-msgbox {
        background-color: var(--color-blue);
        border-radius: 50px 3px 50px 50px;
        padding: 10px;
      }
      .mychat-item2-msg {
        color: var(--color-white);
        font-weight: 500;
      }

      .chat-item-box {
        display: flex;
        justify-content: start;
        margin: 0 0 10px 20px;
      }
      .chat-item1 {
      }
      .chat-item1-img {
        width: 50px;
        height: 50px;
        border-radius: 12px;
      }
      .chat-item2 {
        margin: 0 0 0 10px;
      }
      .chat-item2-who {
        color: var(--color-navy);
        font-weight: 500;
      }
      .chat-item2-msgbox {
        background-color: var(--color-navy);
        border-radius: 3px 50px 50px 50px;
        padding: 10px;
      }
      .chat-item2-msg {
        color: var(--color-white);
        font-weight: 500;
      }
      .chat-item3 {
        display: flex;
        flex-direction: column;
        justify-content: end;
      }
      .chat-item3-time {
        margin: 0 5px;
        color: var(--color-navy);
        font-size: 12px;
      }

      .input-wrapper {
      }

      .notice {
        font-style: italic;
        text-align: center;
      }
      .notice-in {
        color: var(--color-gray5);
      }
      .notice-out {
        color: var(--color-gray3);
      }
    </style>
  </head>
  <body>
    <div id="container">
      <div class="container">
        <div class="row h-100">
          <div class="one col-3 p-0">
            <div class="three">
              <div class="my-wrapper">
                <div>
                  <img
                    class="my-profile"
                    src="../uploads/userDefault.png"
                    alt="나의 프로필 사진"
                    width="75px"
                  />
                </div>
                <div>
                  <span class="my-username"><%=userNick%></span>
                </div>
              </div>
            </div>
            <div class="four">
              <div class="user-cnt">
                <div><span class="user-cnt-tit">USERLIST</span></div>
                <div>
                  <span class="user-cnt-tit"
                    ><i class="bi bi-people-fill"></i>N</span
                  >
                </div>
              </div>
              <div class="user-list">userlist</div>
            </div>
          </div>
          <div class="two col-9 p-0">
            <div class="chatting-wrapper h-100">
              <div class="chatting-tit">HI CHAT</div>
              <div class="chatting-window"></div>
            </div>
            <div class="input-wrapper m-0">
              <div class="input-group">
                <input
                  type="text"
                  class="form-control"
                  id="msg"
                  onkeypress="pressEnter()"
                  placeholder="Write here..."
                  autofocus
                />
                <button
                  type="button"
                  class="btn btn-secondary"
                  onclick="sendChat()"
                >
                  SEND
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      // view에서의 소켓 연결
      // io.connect(): 라이브러리 코드에 정의되어 있음
      let socket = io.connect();
      let socket_id;
      console.log(socket);

      // ok
      function pressEnter() {
        if (event.keyCode == 13) sendChat();
      }

      // ok
      function sendChat() {
        if ($('#msg').val().trim() !== '') {
          socket.emit('sendMsg', {
            message: $('#msg').val(),
          });
        }
        $('#msg').val('');
      }

      //
      function updateList(data) {
        let cnt = Object.keys(data['userList']).length; // 접속자 수 = 리스트 길이
        $('.cnt').text(cnt);
        $('.userlist_item').html('');

        for (let i in data['userList']) {
          $('.userlist_item').append(
            `<div class="d-flex justify-content-between">
              <div class="d-flex hasProfile">
                <img class="profile_item" src="img/${data['userList'][i].filename}" alt="프로필사진" />
                <div class="user_item">${data['userList'][i].nickname}</div>
              </div>
              <div>
                <button class="DM_btn btn btn-outline-dark"><i class="bi bi-chat"></i></button>
              </div>
            </div>`
          );
        }
      }

      // 소켓 연결시 바로 client가 socketid를 가지도록 함
      socket.on('skcreated', (data) => {
        socket_id = data;
        // socket_id = data['socketid'];
      });

      // ok
      socket.on('myMsg', (data) => {
        // 내 메세지인 경우, 우정렬 출력되도록
        console.log('** myMsg **');
        // console.log(data);

        $('.chatting-window').append(
          `<div class="mychat-item-box">
            <div class="mychat-item1">
              <span class="mychat-item1-time">${data['now']}</span>
            </div>
            <div class="mychat-item2">
              <div class="mychat-item2-who">Me</div>
              <div class="mychat-item2-msgbox">
                <span class="mychat-item2-msg">${data['message']}</span>
              </div>
            </div>
          </div>`
        );

        $('.chatting-wrapper').scrollTop($('.chatting-window').height()); // scroll
      });

      // ok
      socket.on('newMsg', (data) => {
        // 나 != 발신인
        if (socket_id['socketid'] != data['socketid']) {
          console.log('** newMsg **');
          $('.chatting-window').append(
            `<div class="chat-item-box">
              <div class="chat-item1">
                <img class="chat-item1-img" src="img/${
                  data['userList'][data['socketid']].filename
                }" alt="프로필사진"/>
              </div>
              <div class="chat-item2">
                <div class="chat-item2-who">${
                  data['userList'][data['socketid']].nickname
                }</div>
                <div class="chat-item2-msgbox">
                  <span class="chat-item2-msg">${data['message']}</span>
                </div>
              </div>
              <div class="chat-item3">
                <span class="chat-item3-time">${data['now']}</span>
              </div>
            </div>`
          );
        }

        $('.chatting-wrapper').scrollTop($('.chatting-window').height()); // scroll
      });

      // ok
      socket.on('noticeIn', (data) => {
        updateList(data);
        $('.chatting-window').append(
          `<div class="notice notice-in">${data['notice']}</div>`
        ); // 입장 공지
      });

      // ok
      socket.on('noticeOut', (data) => {
        $('.chatting-window').append(
          `<div class="notice notice-out">${data['notice']}</div>`
        ); // 퇴장 공지
      });

      //
      socket.on('updateList', (data) => {
        updateList(data);
      });
    </script>
  </body>
</html>
